---
import { UI } from 'astrowind:config';

// CRITICAL: Prevents FOUC (Flash of Unstyled Content) by applying theme immediately in <head>
// This runs BEFORE page content renders, ensuring correct theme from first paint
// BasicScripts.astro has duplicate logic that runs later for Astro navigation and event handling
// Both are necessary: this prevents FOUC, BasicScripts handles interactions and navigation
---

<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  function applyTheme(theme) {
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
    const matches = document.querySelectorAll('[data-aw-toggle-color-scheme] > input');

    if (matches && matches.length) {
      matches.forEach((elem) => {
        elem.checked = theme !== 'dark';
      });
    }
  }

  // Get theme from accessibility-preferences (unified storage)
  function getThemeFromAccessibilityPrefs() {
    try {
      const prefs = localStorage.getItem('accessibility-preferences');
      if (!prefs) return null;
      const settings = JSON.parse(prefs);
      return settings.theme; // 'light', 'dark', or 'system'
    } catch {
      return null;
    }
  }

  const savedTheme = getThemeFromAccessibilityPrefs();

  if ((defaultTheme && defaultTheme.endsWith(':only')) || (!savedTheme && defaultTheme !== 'system')) {
    applyTheme(defaultTheme.replace(':only', ''));
  } else if (savedTheme === 'dark') {
    applyTheme('dark');
  } else if (savedTheme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
    applyTheme('dark');
  } else if (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches) {
    applyTheme('dark');
  } else {
    applyTheme('light');
  }
</script>
