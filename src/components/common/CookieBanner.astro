---
// CookieBanner.astro - GDPR-compliant cookie consent banner
// Shows when user hasn't made a consent choice or consent has expired (6 months)
---

<!-- Cookie Banner -->
<div
  id="cookie-banner"
  class="cookie-banner"
  role="dialog"
  aria-live="polite"
  aria-label="Cookie consent"
  style="display: none; transform: translateY(100%);"
>
  <div class="cookie-banner-content">
    <div class="cookie-banner-text">
      <h2 class="cookie-banner-title">Cookie Settings</h2>
      <p class="cookie-banner-description">
        We use Google Analytics to understand how visitors use our site. This helps us improve our services.
      </p>
      <a href="/cookie-policy" class="cookie-banner-link">Read our Cookie Policy</a>
    </div>

    <div class="cookie-banner-actions">
      <button type="button" id="cookie-accept" class="cookie-banner-button"> Accept </button>
      <button type="button" id="cookie-reject" class="cookie-banner-button"> Reject </button>
    </div>
  </div>
</div>

<style is:inline>
  /* Cookie Banner - bottom-positioned slide-up */
  .cookie-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--aw-color-bg-page);
    color: var(--aw-color-text-default);
    border-top: 2px solid var(--aw-color-primary);
    box-shadow: 0 -4px 24px rgba(0, 0, 0, 0.1);
    z-index: 9995;
    transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
    max-height: 90vh;
    overflow-y: auto;
  }

  .cookie-banner.open {
    transform: translateY(0) !important;
  }

  .cookie-banner-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem;
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    justify-content: space-between;
  }

  @media (max-width: 767px) {
    .cookie-banner-content {
      flex-direction: column;
      gap: 1.5rem;
    }
  }

  .cookie-banner-text {
    flex: 1;
    min-width: 0;
  }

  .cookie-banner-title {
    font-size: calc(1.25rem * var(--aw-text-size-scale, 1));
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    line-height: var(--aw-line-height-scale, 1.5);
  }

  .cookie-banner-description {
    font-size: calc(0.9375rem * var(--aw-text-size-scale, 1));
    line-height: calc(1.6 * var(--aw-line-height-scale, 1));
    margin: 0 0 0.75rem 0;
    color: var(--aw-color-text-default);
  }

  .cookie-banner-description:last-of-type {
    margin-bottom: 1rem;
  }

  .cookie-banner-link {
    color: var(--aw-color-primary);
    text-decoration: underline;
    font-size: calc(0.9375rem * var(--aw-text-size-scale, 1));
    transition: color 200ms ease;
  }

  .cookie-banner-link:hover,
  .cookie-banner-link:focus {
    color: var(--aw-color-primary-hover);
  }

  .cookie-banner-actions {
    display: flex;
    gap: 1rem;
    flex-shrink: 0;
    align-items: flex-start;
    position: relative;
  }

  @media (max-width: 767px) {
    .cookie-banner-actions {
      width: 100%;
      flex-direction: column;
    }
  }

  .cookie-banner-button {
    /* Base button styles matching site's .btn class */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.5rem;
    font-size: calc(1rem * var(--aw-text-size-scale, 1));
    font-weight: 600;
    cursor: pointer;
    border-radius: 9999px; /* rounded-full */
    white-space: nowrap;
    min-width: 160px;
    transition: all 200ms ease-in;

    /* Primary button styles - purple background */
    background: var(--aw-color-primary);
    color: white;
    border: 1px solid var(--aw-color-primary);
  }

  .cookie-banner-button:hover {
    background: var(--aw-color-secondary);
    border-color: var(--aw-color-secondary);
  }

  .cookie-banner-button:focus {
    outline: 2px solid var(--aw-color-primary);
    outline-offset: 2px;
  }

  @media (max-width: 767px) {
    .cookie-banner-button {
      width: 100%;
    }
  }

  /* Respect prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    .cookie-banner {
      transition: none;
    }
  }
</style>

<script>
  // Cookie banner functionality with view transitions support
  import { saveConsent, shouldShowBanner, clearConsent } from '~/utils/consent';

  function initCookieBanner() {
    const banner = document.getElementById('cookie-banner') as HTMLElement | null;
    const acceptBtn = document.getElementById('cookie-accept') as HTMLButtonElement | null;
    const rejectBtn = document.getElementById('cookie-reject') as HTMLButtonElement | null;

    if (!banner || !acceptBtn || !rejectBtn) return;

    // Show banner if needed
    if (shouldShowBanner()) {
      // Small delay to ensure page is loaded and for smooth animation
      setTimeout(() => {
        banner.style.display = 'block';
        // Trigger reflow for animation
        void banner.offsetHeight;
        banner.classList.add('open');
      }, 500);
    }

    // Accept analytics
    acceptBtn.addEventListener('click', () => {
      saveConsent('accepted');
      closeBanner();
      // Reload to initialize analytics
      window.location.reload();
    });

    // Reject analytics
    rejectBtn.addEventListener('click', () => {
      saveConsent('rejected');
      closeBanner();
    });

    function closeBanner() {
      if (!banner) return;
      banner.classList.remove('open');
      setTimeout(() => {
        if (banner) banner.style.display = 'none';
      }, 400);
    }

    function openBanner() {
      if (!banner) return;
      banner.style.display = 'block';
      void banner.offsetHeight; // Trigger reflow
      banner.classList.add('open');
    }

    // Handle cookie preferences link clicks
    const cookiePreferenceLinks = document.querySelectorAll('a[href="#cookie-preferences"]');
    cookiePreferenceLinks.forEach((link) => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        // Clear existing consent and show banner
        clearConsent();
        openBanner();
        // Scroll to banner
        if (banner) banner.scrollIntoView({ behavior: 'smooth', block: 'end' });
      });
    });
  }

  // Initialize on page load
  initCookieBanner();

  // Re-initialize after view transitions
  document.addEventListener('astro:after-swap', initCookieBanner);
</script>
