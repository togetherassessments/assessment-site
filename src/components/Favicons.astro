---
import { getSiteSettings } from '~/utils/site-settings';

const WEBSITE_ID = import.meta.env.WEBSITE_ID || process.env.WEBSITE_ID;
const settings = getSiteSettings();

// Site-specific favicon imports using switch statement
// Vite requires static import paths - cannot use template literals
// Use ?url suffix to get URL strings instead of components/ImageMetadata
let favIcon: string;
let favIconSvg: string;
let appleTouchIcon: string;

switch (WEBSITE_ID) {
  case 'assessments':
    favIcon = (await import('~/assets/images/assessments/favicons/favicon.ico?url')).default;
    favIconSvg = (await import('~/assets/images/assessments/favicons/favicon.svg?url')).default;
    appleTouchIcon = (await import('~/assets/images/assessments/favicons/apple-touch-icon.png?url')).default;
    break;
  case 'adhd':
    favIcon = (await import('~/assets/images/adhd/favicons/favicon.ico?url')).default;
    favIconSvg = (await import('~/assets/images/adhd/favicons/favicon.svg?url')).default;
    appleTouchIcon = (await import('~/assets/images/adhd/favicons/apple-touch-icon.png?url')).default;
    break;
  case 'autism':
    favIcon = (await import('~/assets/images/autism/favicons/favicon.ico?url')).default;
    favIconSvg = (await import('~/assets/images/autism/favicons/favicon.svg?url')).default;
    appleTouchIcon = (await import('~/assets/images/autism/favicons/apple-touch-icon.png?url')).default;
    break;
  default:
    throw new Error(`‚ùå Invalid WEBSITE_ID: ${WEBSITE_ID}. Must be 'assessments', 'adhd', or 'autism'.`);
}

const maskColour = settings.branding?.mask_icon_colour || '#8D46E7';
---

<link rel="shortcut icon" href={favIcon} />
<link rel="icon" type="image/svg+xml" href={favIconSvg} />
<link rel="mask-icon" href={favIconSvg} color={maskColour} />
<link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon} />
