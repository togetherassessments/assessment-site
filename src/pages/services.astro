---
import Layout from '~/layouts/PageLayout.astro';
import { getEntry, getCollection } from 'astro:content';
import Image from '~/components/common/Image.astro';
import { marked } from 'marked';
import StructuredData from '~/components/common/StructuredData.astro';
import { generateBreadcrumbs } from '~/utils/breadcrumbs';
import { getSiteSettings } from '~/utils/site-settings';

const settings = getSiteSettings();

// Fetch top content
const topContent = await getEntry('services_page_top_content', 'top-content');
if (!topContent) {
  throw new Error('Services page top content not found');
}

const { title, subheading, image, image_alt, body } = topContent.data;

// Convert markdown to HTML if body exists
const htmlContent = body ? marked.parse(body) : null;

// Fetch and filter service items
const allServices = await getCollection('services_page_items');
const services = allServices.filter((service) => service.data.published).sort((a, b) => a.data.order - b.data.order);

// Build array of Service schemas (only for services with schema_data)
const serviceSchemas = services
  .filter((service) => service.data.schema_data)
  .map((service) => ({
    '@context': 'https://schema.org',
    '@type': 'Service',
    '@id': `${Astro.site}services#${service.data.anchor}`,
    name: service.data.title,
    description: service.data.description,
    ...(service.data.schema_data?.serviceType && {
      serviceType: service.data.schema_data.serviceType,
    }),
    provider: {
      '@id': `${Astro.site}#organization`,
    },
    ...(settings.seo.area_served && {
      areaServed: {
        '@type': 'AdministrativeArea',
        name: settings.seo.area_served,
      },
    }),
    ...(service.data.schema_data?.priceRange && {
      offers: {
        '@type': 'Offer',
        priceCurrency: 'GBP',
        price: service.data.schema_data.priceRange,
      },
    }),
  }));

// Breadcrumb schema
const breadcrumbSchema = generateBreadcrumbs(Astro.url.pathname, Astro.site!, 'Services');

const metadata = {
  title: title,
};
---

<Layout metadata={metadata}>
  <!-- Structured Data -->
  {serviceSchemas.map((schema) => <StructuredData schema={schema} />)}
  <StructuredData schema={breadcrumbSchema} />

  <div class="container mx-auto px-4 py-16">
    <!-- Title with font-heading -->
    <h1 class="text-4xl font-bold text-center mb-8 font-heading">{title}</h1>

    <!-- Optional subheading (H3, centred, without font-heading) -->
    {subheading && <h3 class="text-2xl text-center mb-8">{subheading}</h3>}

    <!-- Optional image (centred) -->
    {
      image && (
        <div class="flex justify-center mb-8">
          <Image src={image} alt={image_alt || title} class="max-w-full h-auto" />
        </div>
      )
    }

    <!-- Optional markdown content -->
    {htmlContent && <div class="prose prose-lg dark:prose-invert mx-auto max-w-4xl mb-12" set:html={htmlContent} />}

    <!-- Service Items -->
    <div class="max-w-3xl mx-auto space-y-12">
      {
        services.map((service) => (
          <section id={service.data.anchor} class="scroll-mt-20">
            <h2 class="text-2xl font-bold mb-4 font-heading">{service.data.title}</h2>
            <p class="text-gray-600 dark:text-gray-400">{service.data.description}</p>
          </section>
        ))
      }
    </div>
  </div>
</Layout>
