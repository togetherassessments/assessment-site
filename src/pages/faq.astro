---
import Layout from '~/layouts/PageLayout.astro';
import { getEntry, getCollection } from 'astro:content';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';
import { marked } from 'marked';
import StructuredData from '~/components/common/StructuredData.astro';
import { generateBreadcrumbs } from '~/utils/breadcrumbs';
import { generateWebPageSchema } from '~/utils/schema-generators';

// Fetch top content
const topContent = await getEntry('faqs_page_top_content', 'top-content');
if (!topContent) {
  throw new Error('FAQs page top content not found');
}

const { title, subheading, image, image_alt, body } = topContent.data;

// Convert markdown to HTML if body exists
const htmlContent = body ? marked.parse(body) : null;

// Fetch and filter FAQ items, sorted by order
const allFaqs = await getCollection('faqs_page_items');
const faqs = allFaqs.filter((faq) => faq.data.published).sort((a, b) => a.data.order - b.data.order);

// Build FAQPage schema
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  '@id': `${Astro.url.href}#faq`,
  mainEntity: faqs.map((faq) => ({
    '@type': 'Question',
    name: faq.data.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.data.answer,
    },
  })),
};

// Breadcrumb schema
const breadcrumbSchema = generateBreadcrumbs(Astro.url.pathname, Astro.site!, 'Frequently Asked Questions');

// WebPage schema
const webPageSchema = generateWebPageSchema(
  Astro.url,
  title,
  undefined,
  `${Astro.url.href}#faq`,
  `${Astro.url.href}#breadcrumb`
);

const metadata = {
  title: title,
};
---

<Layout metadata={metadata}>
  <!-- Structured Data -->
  <StructuredData schema={webPageSchema} />
  <StructuredData schema={faqSchema} />
  <StructuredData schema={breadcrumbSchema} />

  <div class="container mx-auto px-4 py-16">
    <!-- Title with font-heading -->
    <h1 class="text-4xl font-bold text-center mb-8 font-heading">{title}</h1>

    <!-- Optional subheading (H3, centred, without font-heading) -->
    {subheading && <h3 class="text-2xl text-center mb-8">{subheading}</h3>}

    <!-- Optional image (centred, constrained height for portrait images) -->
    {
      image && (
        <div class="flex justify-center mb-8 max-h-[50vh]">
          <Image src={image} alt={image_alt || title} layout="contained" />
        </div>
      )
    }

    <!-- Optional markdown content -->
    {htmlContent && <div class="prose prose-lg dark:prose-invert mx-auto max-w-4xl mb-12" set:html={htmlContent} />}
  </div>

  <!-- FAQ Items with Image Support -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 pb-12">
    <div class="grid gap-y-8 md:gap-y-12 sm:grid-cols-2 gap-8">
      {
        faqs.map(async (faq) => {
          const answerHtml = await marked.parse(faq.data.answer);
          return (
            <div class="intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
              <div class="flex flex-col max-w-md">
                <div class="flex items-start gap-2">
                  <Icon
                    name={faq.data.icon || 'tabler:chevron-right'}
                    class="w-6 h-6 flex-shrink-0 text-primary -mt-0.5"
                  />
                  <h3 class="text-xl font-bold">{faq.data.question}</h3>
                </div>
                <div class="ml-8">
                  {faq.data.image && (
                    <div class="my-3 h-24">
                      <Image
                        src={faq.data.image}
                        alt={faq.data.image_alt || faq.data.question}
                        class="rounded-lg h-full w-auto object-contain"
                        layout="contained"
                      />
                    </div>
                  )}
                  <p class="mt-3 text-muted" set:html={answerHtml} />
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</Layout>
