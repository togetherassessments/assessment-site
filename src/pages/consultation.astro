---
import Layout from '~/layouts/PageLayout.astro';
import { getEntry } from 'astro:content';
import Image from '~/components/common/Image.astro';
import { marked } from 'marked';
import YAML from 'yaml';
import fs from 'fs';
import path from 'path';
import StructuredData from '~/components/common/StructuredData.astro';
import { generateBreadcrumbs } from '~/utils/breadcrumbs';
import { generateWebPageSchema } from '~/utils/schema-generators';

// Get WEBSITE_ID from environment
const WEBSITE_ID = process.env.WEBSITE_ID;
if (!WEBSITE_ID) {
  throw new Error('WEBSITE_ID environment variable is required');
}

// Load site settings to check waitlist_only flag
const settingsPath = path.join(process.cwd(), `src/content/${WEBSITE_ID}/site-settings.yaml`);
const settings = YAML.parse(fs.readFileSync(settingsPath, 'utf8'));

// Redirect to waitlist if waitlist_only mode is active
if (settings.site.waitlist_only) {
  return Astro.redirect('/waitlist');
}

// Fetch consultation page content
const content = await getEntry('consultation_page', 'content');
if (!content) {
  throw new Error('Consultation page content not found');
}

const { title, subheading, image, image_alt, body, google_calendar_link } = content.data;

// Convert markdown to HTML if body exists
const htmlContent = body ? marked.parse(body) : null;

const metadata = {
  title: title,
};

// Breadcrumb schema
const breadcrumbSchema = generateBreadcrumbs(Astro.url.pathname, Astro.site!, title);

// WebPage schema
const webPageSchema = generateWebPageSchema(Astro.url, title, undefined, undefined, `${Astro.url.href}#breadcrumb`);
---

<Layout metadata={metadata}>
  <!-- Structured Data -->
  <StructuredData schema={webPageSchema} />
  <StructuredData schema={breadcrumbSchema} />

  <div class="container mx-auto px-4 py-16">
    <!-- Title with font-heading -->
    <h1 class="text-4xl font-bold text-center mb-8 font-heading">{title}</h1>

    <!-- Optional subheading (H3, centred, without font-heading) -->
    {subheading && <h3 class="text-2xl text-center mb-8">{subheading}</h3>}

    <!-- Optional image (centred) -->
    {
      image && (
        <div class="flex justify-center mb-8">
          <Image src={image} alt={image_alt || title} class="max-w-full h-auto" />
        </div>
      )
    }

    <!-- Optional markdown content -->
    {
      htmlContent && (
        <div
          class="prose prose-lg dark:prose-invert prose-a:text-primary dark:prose-a:text-primary mx-auto max-w-4xl mb-12"
          set:html={htmlContent}
        />
      )
    }

    <!-- Accessible booking section -->
    <div class="max-w-4xl mx-auto">
      <!-- Accessibility message with link -->
      <p class="text-center mb-4 text-gray-700 dark:text-gray-300">
        If you use a screen reader or prefer a more accessible experience, you can <a
          href={google_calendar_link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary underline hover:no-underline">open the booking calendar in a new tab</a
        > instead.
      </p>

      <!-- Google Calendar iframe - forced light mode -->
      <div class="w-full flex justify-center bg-white rounded-lg shadow-lg p-4">
        <iframe
          src={google_calendar_link}
          title="Book a consultation appointment"
          class="w-full border-0 rounded"
          style="min-height: 600px; max-width: 100%; color-scheme: light;"
          width="100%"
          height="600"></iframe>
      </div>

      <!-- Waitlist link -->
      <p class="text-center mt-8 text-gray-700 dark:text-gray-300">
        No appointments available? <a href="/waitlist" class="text-primary underline hover:no-underline"
          >Join the waitlist</a
        >.
      </p>
    </div>
  </div>
</Layout>
