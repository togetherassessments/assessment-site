---
import Layout from '~/layouts/PageLayout.astro';
import TextPageContent from '~/components/widgets/TextPageContent.astro';
import StructuredData from '~/components/common/StructuredData.astro';
import { generateBreadcrumbs } from '~/utils/breadcrumbs';

const metadata = {
  title: 'Refunds & Cancellations',
};

// Breadcrumb schema
const breadcrumbSchema = generateBreadcrumbs(Astro.url.pathname, Astro.site!, 'Refunds & Cancellations');
---

<Layout metadata={metadata}>
  <!-- Structured Data -->
  <StructuredData schema={breadcrumbSchema} />

  <TextPageContent slug="refunds-cancellations" />
</Layout>
